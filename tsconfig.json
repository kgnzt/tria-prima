    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./lib",
    "paths": {
      "types": ["types.d.ts"]
    }
  },
  "include": [
    "./lib/*",
    "./bin/*"
  ],
  "exclude": [
    "./lib/**/*.test.ts",
    "./lib/**/*.test.tsx"
  ]
}
